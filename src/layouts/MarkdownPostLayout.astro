---
import BaseLayout from "./Layout.astro";
import RelatedPostThumb from "../components/RelatedPostThumb.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div slot="content">
        <article>
            <p class="author">Autor: {frontmatter.author}</p>
            <p class="date">
                Fecha de publicaci√≥n: {
                    new Date(frontmatter.pubDate).toDateString()
                }
            </p>
            <p class="description">
                Resumen: <em>{frontmatter.description}</em>
            </p>
            <img
                src={frontmatter.image.url}
                alt={frontmatter.image.alt}
                width="50%"
                height="auto"
            />

            <slot />
        </article>
    </div>
    <div slot="sidebar">Related Posts:
        <RelatedPostThumb url={frontmatter.url} tags={frontmatter.tags}/>
    </div>
</BaseLayout>

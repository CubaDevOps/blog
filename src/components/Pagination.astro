---
const { length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } =
    Astro.props;
const paginationList = Array.from({ length }, (_, i) => i + 1);
const orange_color = "#ffb42b";
const orange_color_hover = "#fcbf79";
---

<nav aria-label="Blog Pages" class="pagination pagination-default">
    {
        firstUrl == currentUrl ? (
            <span class="pagination__link disabled">
                <i class="pi-angle-left doubled" />
                <i class="pi-angle-left" />
            </span>
        ) : (
            <a href={firstUrl} class="pagination__link">
                <i class="pi-angle-left doubled" />
                <i class="pi-angle-left" />
            </a>
        )
    }

    {
        prevUrl ? (
            <a href={prevUrl} class="pagination__link">
                <i class="pi-angle-left" />
            </a>
        ) : (
            <span class="pagination__link disabled">
                <i class="pi-angle-left" />
            </span>
        )
    }

    {
        paginationList.map((num) => (
            <a
                href={`${firstUrl}${num == 1 ? "" : "/" + num}`}
                class={`pagination__link ${
                    currentPage == num ? "disabled active" : ""
                }`}
            >
                {num}
            </a>
        ))
    }

    {
        !nextUrl ? (
            <span class="pagination__link disabled">
                <i class="pi-angle-right" />
            </span>
        ) : (
            <a href={nextUrl} class="pagination__link">
                <i class="pi-angle-right" />
            </a>
        )
    }

    {
        lastUrl == currentUrl ? (
            <span class="pagination__link disabled">
                <i class="pi-angle-right" />
                <i class="pi-angle-right doubled" />
            </span>
        ) : (
            <a href={lastUrl} class="pagination__link">
                <i class="pi-angle-right" />
                <i class="pi-angle-right doubled" />
            </a>
        )
    }
</nav>

<style define:vars={{orange_color,orange_color_hover}}>
    i.pi-angle-left,i.pi-angle-right{
        fill: var(--orange_color);
    }
    i.pi-angle-left:hover,i.pi-angle-right:hover {
        fill: var(--orange_color_hover);
    }
    i.pi-angle-left.doubled {
        margin-right: -15px;
    }
    i.pi-angle-left {
        width: 20px;
        height: 20px;
        background-image: url("../../public/arrow-left.svg");
        background-size: cover;
        display: inline-block;
    }
    i.pi-angle-right {
        width: 20px;
        height: 20px;
        background-image: url("../../public/arrow-right.svg");
        background-size: cover;
        display: inline-block;
    }
    i.pi-angle-right.doubled {
        margin-left: -15px;
    }
    .pagination {
        display: inline-flex;
        flex-wrap: nowrap;
        justify-content: center;
        flex-direction: row;
        gap: 5px;
    }
</style>

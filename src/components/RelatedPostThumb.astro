---
const { url, tags } = Astro.props;

const allPosts = await Astro.glob("../pages/posts/*.md");
const related_posts = allPosts.filter((post) => {
  return (
    post.url !== url && post.frontmatter.tags.some((tag) => tags.includes(tag))
  );
}).sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate)).slice(0,5);

import Link from "./Link.astro";
const link_post_color = "#7257fa";
const link_post_color_hover = "black";
const link_post_color_visited = "#7257fa";
---

<style>

  ul.related_posts {
      gap: 5px;
      display: grid;
      justify-items: center;
  }

  li{
    list-style: none;
    width: 80%;
  }
  .card {
    --border-radius: 0.75rem;
    --primary-color: #7257fa;
    --secondary-color: #3c3852;
    width: 100%;
    height: 100%;
    font-family: "Arial";
    padding: 1rem;
    cursor: pointer;
    border-radius: var(--border-radius);
    background: #f1f1f3;
    box-shadow: 0px 8px 16px 0px rgb(0 0 0 / 3%);
    position: relative;
  }

  .card .card__content {
    color: var(--secondary-color);
    font-size: 0.86rem;
    overflow-y: hidden;
    text-overflow: ellipsis;
    width: 100%;
    height: 100px;
  }

  .card .card__title {
    padding: 0;
    font-size: 1.3rem;
    font-weight: bold;
    margin: 0;
    text-wrap: wrap;
  }

  .card .thumb-container {
    width: 100%;
    height: 120px;
    overflow: hidden;
    position: relative;
  }

  .card .thumb-container img {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }

  .card .card__date {
    color: #6e6b80;
    font-size: 0.8rem;
    position: absolute;
    bottom: 0.5rem;
    left: 1rem;
  }

  .card .card__arrow {
    position: absolute;
    background: var(--primary-color);
    padding: 0.4rem;
    border-top-left-radius: var(--border-radius);
    border-bottom-right-radius: var(--border-radius);
    bottom: 0;
    right: 0;
    transition: 0.2s;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card svg {
    transition: 0.2s;
  }

  /* hover */
  .card:hover .card__title {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .card:hover .card__arrow {
    background: #111;
  }

  .card:hover .card__arrow svg {
    transform: translateX(3px);
  }
</style>

<ul class="related_posts">
  {
    related_posts.map(function (post: {
      url: any;
      frontmatter: {
        title: any;
        description: any;
        pubDate: any;
        image: { url: any };
      };
    }) {
      return (
        <Fragment>
          <li class="related_post">
            <div class="card">
              <h3 class="card__title">
                <Link
                  url={post.url}
                  text={post.frontmatter.title}
                  color={link_post_color}
                  hover={link_post_color_hover}
                  visited={link_post_color_visited}
                />
              </h3>
                <div class="thumb-container">
                  <img
                    class="thumbnail"
                    src={post.frontmatter.image.url}
                    width="100%"
                    height="auto"
                  />
                </div>
            </div>
          </li>
        </Fragment>
      );
    })
  }
</ul>
